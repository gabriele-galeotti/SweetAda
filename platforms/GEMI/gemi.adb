package body GEMI
   is

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Local declarations                           --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   LEDPORT_Status : Unsigned_8;

   --========================================================================--
   --                                                                        --
   --                                                                        --
   --                           Package subprograms                          --
   --                                                                        --
   --                                                                        --
   --========================================================================--

   ----------------------------------------------------------------------------
   -- LEDPORT_In
   ----------------------------------------------------------------------------
   function LEDPORT_In
      return Unsigned_8
      is
   begin
      return LEDPORT_Status;
   end LEDPORT_In;

   ----------------------------------------------------------------------------
   -- LEDPORT_Out
   ----------------------------------------------------------------------------
   procedure LEDPORT_Out
      (Value : in Unsigned_8)
      is
   begin
      LEDPORT_Status := Value;
      LEDPORT := LEDPORT_Status;
   end LEDPORT_Out;

end GEMI;
