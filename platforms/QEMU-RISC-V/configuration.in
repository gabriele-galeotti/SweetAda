
#
# QEMU-RISC-V (QEMU emulator)
#
# RISC-V RV32IMAFC
#

# force LibGCC
USE_LIBGCC := Y

CPU       := RISC-V
CPU_MODEL := RV32IMAFC

GCC_SWITCHES_PLATFORM     += -mabi=ilp32f -march=rv32imafc
LD_SWITCHES_PLATFORM      += -m elf32lriscv
OBJDUMP_SWITCHES_PLATFORM +=
POSTBUILD_ROMFILE         := Y
OBJCOPY_SWITCHES_PLATFORM += -O binary --gap-fill=0x00

USE_APPLICATION := test-QEMU-RISC-V-32

SESSION_START_COMMAND :=
SESSION_END_COMMAND   :=

RUN_COMMAND   := $(RUNSWEETADA) -k "$(SWEETADA_PATH)" -p "$(PLATFORM_DIRECTORY)" -f qemu.cfg
DEBUG_COMMAND := $(RUN_COMMAND) -d DEBUG_QEMU

